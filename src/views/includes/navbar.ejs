<header>
    <nav>
        <div class="left-section">
            <div class="navbar-brand logo">
                <a href="/"><span style="color:#e040fb;">User Profile</span></a>
            </div>
        </div>
        <div class="auth-links">
            <% if (currentUser) { %>
                <!-- refresh-token post req using form-->
                <form action="/api/users/refresh-token" method="POST">
                    <button type="submit" class="btn btn-outline-success">Refresh access Token</button>
                </form>
                <a href="/account">Account</a>
                <a href="/api/users/logout">Logout</a>
                <% } else { %>
                    <a href="/login">Login</a>
                    <% } %>
        </div>
    </nav>
</header>