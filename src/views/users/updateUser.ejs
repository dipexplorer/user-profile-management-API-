<%- layout("/layouts/boilerplate") -%>
    <style>
        /* üåå Global Container Styling */
        .outer {
            margin: 7rem 0;
        }

        /* üé® Edit Profile Container */
        .edit-profile-container {
            background-color: #1f1f2e;
            border-radius: 15px;
            padding: 40px;
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.4);
            border: 2px solid #9c27b0;
            color: #f0f4f8;
            transition: all 0.3s ease-in-out;
        }

        .edit-profile-container:hover {
            box-shadow: 0 18px 40px rgba(156, 39, 176, 0.3);
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: #9c27b0;
            font-weight: bold;
            text-align: center;
        }

        /* üå† Profile Picture Preview */
        .profile-picture-preview {
            display: flex;
            justify-content: center;
            margin-bottom: 1.5rem;
        }

        .profile-picture-preview img {
            width: 130px;
            height: 130px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid #9c27b0;
            box-shadow: 0 6px 15px rgba(156, 39, 176, 0.5);
            transition: transform 0.3s ease;
        }

        .profile-picture-preview img:hover {
            transform: scale(1.1);
            cursor: pointer;
        }

        /* üñ•Ô∏è Form Styling */
        .profile-edit-form input,
        .profile-edit-form select,
        .profile-edit-form textarea {
            background-color: #2e2e3c;
            color: #f0f4f8;
            border: 1px solid #9c27b0;
            padding: 14px;
            border-radius: 10px;
            width: 100%;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
            font-size: 1.1rem;
        }

        .profile-edit-form input:focus,
        .profile-edit-form select:focus,
        .profile-edit-form textarea:focus {
            border-color: #7a1e9c;
            outline: none;
            box-shadow: 0px 0px 8px rgba(156, 39, 176, 0.4);
        }

        /* Special Styling for Readonly Fields (e.g., Email, Password) */
        .profile-edit-form input[readonly] {
            background-color: #3a3a4a;
            cursor: not-allowed;
            color: #9e9e9e;
        }

        label {
            font-size: 1.1rem;
            font-weight: 600;
            color: #f0f4f8;
            margin-bottom: 8px;
            display: block;
        }

        .form-text {
            color: #b0b0b0;
            font-size: 0.9rem;
            margin-top: 6px;
        }

        /* üöÄ Checkbox Styling */
        .form-check-input {
            background-color: #2e2e3c;
            border: 1px solid #9c27b0;
            width: 18px;
            height: 18px;
        }

        .form-check-label {
            color: #9c27b0;
            font-size: 0.95rem;
        }

        /* üéØ Button Styling */
        .btn-danger {
            background-color: #9c27b0;
            color: #ffffff;
            padding: 14px;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background 0.3s ease, transform 0.2s;
            border: none;
        }

        .btn-danger:hover {
            background-color: #7a1e9c;
            transform: translateY(-2px);
            box-shadow: 0px 4px 14px rgba(156, 39, 176, 0.3);
        }

        .btn-secondary {
            background-color: #2e2e3c;
            color: #ffffff;
            padding: 14px;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background 0.3s ease, transform 0.2s;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #3a3a4a;
            color: #9c27b0;
            transform: translateY(-2px);
            box-shadow: 0px 4px 14px rgba(156, 39, 176, 0.2);
        }

        /* üåô Dark Mode Consistency */
        .dark-mode .edit-profile-container {
            background-color: #1f1f2e;
        }

        .dark-mode label,
        .dark-mode .form-text {
            color: #d1d1d1;
        }

        /* üì± Responsive Styling */
        @media (max-width: 768px) {
            .outer {
                padding: 15px;
            }

            h1 {
                font-size: 2rem;
            }

            .profile-picture-preview img {
                width: 100px;
                height: 100px;
            }

            .profile-edit-form input,
            .profile-edit-form select,
            .profile-edit-form textarea {
                font-size: 1rem;
            }

            .btn-danger,
            .btn-secondary {
                font-size: 1rem;
                padding: 10px;
            }
        }

        /* üåç Two Input Fields in One Row for Small Inputs */
        .row-inputs {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .row-inputs .col-md-6 {
            flex: 1 1 calc(50% - 15px);
        }

        .row-inputs .col-md-6 input {
            width: 100%;
        }
    </style>

    <div class="row outer">
        <div class="col-12 col-md-8 col-lg-6 mx-auto edit-profile-container">
            <h1>Edit Your Profile</h1>

            <!-- ‚≠ê Profile Picture Preview -->
            <div class="profile-picture-preview">
                <img id="profileImagePreview" src="<%= user.profilePic || '/pic/profile.jpg' %>"
                    alt="Profile Picture" />
            </div>

            <form action="/api/users/update?_method=PUT" method="POST">
                <!-- ‚úÖ Name and Address in one row -->
                <div class="row-inputs mb-3">
                    <div class="col-md-6 profile-edit-form">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" value="<%= user.name || '' %>"
                            placeholder="Enter your name">
                    </div>
                    <div class="col-md-6 profile-edit-form">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" value="<%= user.address || '' %>"
                            placeholder="Enter your address">
                    </div>
                </div>

                <!-- ‚úÖ Email -->
                <div class="mb-3 profile-edit-form">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="<%= user.email %>" placeholder="Enter your email"
                        readonly>
                </div>


                <!-- ‚úÖ Bio -->
                <div class="mb-3 profile-edit-form">
                    <label for="bio">Bio</label>
                    <textarea name="bio" id="bio" rows="4"
                        placeholder="Tell us something about yourself"><%= user.bio || '' %></textarea>
                </div>

                <!-- ‚úÖ Profile Picture Upload (Optional) -->
                <div class="mb-3 profile-edit-form">
                    <label for="profilePic">Add ProfilePic link</label>
                    <input type="text" name="profilePic" id="profilePic">
                </div>

                <br>

                <!-- ‚úÖ Buttons -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger">Save Changes</button>
                    <a href="/account" class="btn btn-secondary">Go Back</a>
                </div>

            </form>
        </div>
    </div>